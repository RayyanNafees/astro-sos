---
import Base from './Base.astro'
import '../styles/menu.css'

const navigation = [
  { link: '/', text: 'Start' },
  { link: '#', text: 'About' },
  { link: '#', text: "NGO's" },
]
---

<Base>
  <div class='app'>
    <header class='header'>
      <nav>
        <button id='menu-btn' aria-label='menu-bar' type='button'>
          <i class='i-fa-solid-bars'></i>
        </button>
        <ul class={`menu-links`}>
          {
            navigation.map((nav) => (
              <li>
                <a class='nav-link' href={nav.link}>
                  {nav.text}
                </a>
              </li>
            ))
          }
        </ul>
        <h2>Astro SOS Animals</h2>
      </nav>
      <div class={`menu-bg`}></div>
    </header>
    <slot />
  </div>
</Base>

<script>
  const list = document.querySelector('ul.menu-links')
  const bg = document.querySelector('div.menu-bg')
  const menu = document.querySelector('#menu-btn') as HTMLElement
  const links = document.querySelectorAll(
    'a.nav-link'
  ) as NodeListOf<HTMLElement>

  const hide = () => {
    bg?.classList.remove('show')
    list?.classList.remove('show')
  }
  const show = () => {
    bg?.classList.add('show')
    list?.classList.add('show')
  }

  const toggle = () => {
    bg?.classList.toggle('show')
    list?.classList.toggle('show')
  }

  menu.onclick = toggle

  links.forEach((link) => {
    link.onblur = hide
    link.onclick = toggle
    link.onfocus = show
  })
</script>
